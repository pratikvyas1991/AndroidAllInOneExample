<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:id="@+id/virate_text"
        android:textSize="30dp"
        android:text="Vibration goes here "
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Start Vibration"
        android:textSize="30dp"
        android:id="@+id/vibrate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <Button
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Start Vibration pattern"
        android:textSize="30dp"
        android:id="@+id/vibrate_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_marginTop="20dp"
        android:layout_marginLeft="40dp"
        android:text="Cancel Vibration"
        android:textSize="30dp"
        android:id="@+id/vibrate_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>